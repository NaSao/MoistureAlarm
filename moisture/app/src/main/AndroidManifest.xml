<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.journaldev.sqlite" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.tuc.piediaper.activity.DeviceListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:name="de.tuc.piediaper.activity.ModifyDeviceActivity"
            android:label="@string/app_name" />

        <activity android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:name="de.tuc.piediaper.activity.AddDeviceActivity"
            android:label="@string/app_name" />
    </application>

</manifest>
